@*
    Primary Resume Component

    Will contain multiple other components to display a visual representation of my resume.

    Planned to display within a TelerikGrid or TelerikTileLayout

    TODO: Use DeviceState to determine layout and orientation of the components
*@

@inject DeviceState DeviceState

<style>
    .k-tilelayout-item-header.k-card-header {
        display: none;
    }
</style>

<TelerikTileLayout Columns="@(DeviceState.GetDeviceState() ? 3 : 2)"
                   ColumnWidth="@(DeviceState.GetDeviceState() ? "33%" : "50%")"
                   Width="@(DeviceState.GetDeviceState() ? "70%" : "100%")"
                   RowHeight="65vh"
                   Resizable="false"
                   Reorderable="false"
                   Class="primary-tile-layout">
    <TileLayoutItems>
        <TileLayoutItem ColSpan="3">
            <Content>
                <BasicInfoComponent />
            </Content>
        </TileLayoutItem>
        <TileLayoutItem ColSpan="3">
            <Content>
                <WhatDoComponent />
            </Content>
        </TileLayoutItem>
        <TileLayoutItem ColSpan="2" RowSpan="1">
            <Content>
                <ExperienceComponent />
            </Content>
        </TileLayoutItem>
        <TileLayoutItem ColSpan="1" RowSpan="1">
            <Content>
                <PrimarySkillsComponent />
            </Content>
        </TileLayoutItem>
        <TileLayoutItem ColSpan="2" RowSpan="1">
            <Content>
                <EducationComponent />
            </Content>
        </TileLayoutItem>
        <TileLayoutItem ColSpan="1" RowSpan="1">
            <Content>
                <SecondarySkillsComponent />
            </Content>
        </TileLayoutItem>
    </TileLayoutItems>
</TelerikTileLayout>


